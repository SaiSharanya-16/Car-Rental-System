<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Rental App</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            padding: 20px;
        }
        h1 {
            color: #333;
        }
        button {
            margin: 5px;
            padding: 10px 20px;
            cursor: pointer;
            border: none;
            background-color: #007BFF;
            color: white;
            border-radius: 5px;
        }
        button:hover {
            background-color: #0056b3;
        }
        #output {
            margin-top: 20px;
            background-color: white;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0px 0px 5px #aaa;
        }
    </style>
</head>
<body>
    <h1>Car Rental App</h1>
    <div id="menu">
        <button onclick="viewCars()">View Cars</button>
        <button onclick="rentCar()">Rent a Car</button>
        <button onclick="returnCar()">Return a Car</button>
        <button onclick="viewHistory()">Rental History</button>
    </div>
    <div id="output"></div>

    <script>
        let cars = [
            { id: 1, brand: "Toyota", model: "Innova", price: 2000, available: true },
            { id: 2, brand: "Hyundai", model: "i20", price: 1500, available: true },
            { id: 3, brand: "Maruti", model: "Swift", price: 1200, available: true }
        ];

        let rentalHistory = [];

        function viewCars() {
            let output = "<h2>Available Cars</h2><ul>";
            cars.forEach(car => {
                output += <li>${car.id}. ${car.brand} ${car.model} - Rs.${car.price} per day - ${car.available ? "Available" : "Rented"}</li>;
            });
            output += "</ul>";
            document.getElementById("output").innerHTML = output;
        }

        function rentCar() {
            let carId = prompt("Enter Car ID to rent:");
            let car = cars.find(c => c.id == carId);
            if (!car) {
                alert("Invalid Car ID");
                return;
            }
            if (!car.available) {
                alert("Car is already rented");
                return;
            }
            let days = prompt("Enter number of days:");
            rentalHistory.push({ car: car, days: days });
            car.available = false;
            alert(You rented: ${car.brand} ${car.model} for ${days} days. Total cost: Rs.${car.price * days});
        }

        function returnCar() {
            let carId = prompt("Enter Car ID to return:");
            let car = cars.find(c => c.id == carId);
            if (!car) {
                alert("Invalid Car ID");
                return;
            }
            if (car.available) {
                alert("This car was not rented");
                return;
            }
            car.available = true;
            alert(You returned: ${car.brand} ${car.model});
        }

        function viewHistory() {
            let output = "<h2>Rental History</h2><ul>";
            rentalHistory.forEach(r => {
                output += <li>${r.car.brand} ${r.car.model} | Days: ${r.days} | Cost: Rs.${r.car.price * r.days}</li>;
            });
            output += "</ul>";
            document.getElementById("output").innerHTML = output;
        }
    </script>
</body>
</html>
